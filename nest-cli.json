{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.pug",
        "watchAssets": true
      },
      {
        "include": "mailer/templates/**/*",
        "watchAssets": true
      }
    ]
  }
}
